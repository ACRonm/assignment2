@model WDP2022A2Mac.Models.Company

@{
    ViewData["Title"] = "Create";
}
<section class="admin-s1 container g-5">
    <h1 class="admin-head">Add a new company</h1>
    <hr />
    <div class="row companyForm">
        <div class="col-md-12">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="container">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CompanyName" class="control-label"></label>
                        <input required asp-for="CompanyName" id="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Summary" class="control-label"></label>
                        <textarea required asp-for="Summary" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label hidden asp-for="ImageFilename" class="control-label"></label>
                        <input hidden id="imageFilename" required asp-for="ImageFilename" class="form-control" />
                        <span asp-validation-for="ImageFilename" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Upload image file</label>
                        <input required id="fileUpload" type="file" name="file" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label hidden asp-for="AnchorLink" class="control-label"></label>
                        <input hidden asp-for="AnchorLink" id="AnchorLink" class="form-control"/>
                        <span asp-validation-for="AnchorLink" class="text-danger"></span>
                    </div>
                   <div class="form-group">
                        <label hidden asp-for="Like" class="control-label"></label>
                        <input hidden asp-for="Like" class="form-control" value="0" readonly/>
                        <span asp-validation-for="Like" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label hidden class="form-check-label">
                            <input hidden class="form-check-input" asp-for="canIncreaseLike" /> @Html.DisplayNameFor(model => model.canIncreaseLike)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary create-btn" />
                    <a class="btn btn-light create-back-btn" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
    <hr>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
